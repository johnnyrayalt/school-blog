{{#partial "content"}}

<h1>Post list!</h1>

{{#if posts}}
    {{#each posts}}
        <p>Current post:</p>
        <p>{{content}}</p>
    {{/each}}
    {{else}}
    <p>No posts!</p>
{{/if}}

<p>Add a new Post:</p>

<form action="/posts/new" method="POST">
    <label for="content">Post Description</label>
    <input type="text" id="content" name="content">

    <button class="btn btn-default" type="submit">Add post</button>
</form>
{{/partial}}

{{> layout.hbs}}